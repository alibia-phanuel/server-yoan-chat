{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./@types"],
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "types": ["node"],

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "@types/**/*.d.ts", "src/config/db.js"]
}
